doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Real State &lt; 220096 &gt; | #{page}
        link(rel="stylesheet", href="/css/app.css")   
    body.min-h-screen(class="bg-custom3") 
        main(class="mx-auto container mt-10 px-2")
                div.py-10
                    h1.text-center-4xl.my-10.font-extrabold.text-custom4.text-center.text-5xl Real
                        span.font-normal.text-black.text-3.l State
                    .mt-8.mx-auto.max-w-xl
                        .bg-custom6.py-8.px-4.shadow-lg.rounded-md 
                            form.space-y-5(action="/property/insert-property", method="POST" novalidate)
                                div 
                                    label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="name") Name 
                                    input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Property name" type="text" name="name" required)

                                div 
                                    label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="price") Price 
                                    input#price.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Property price" type="number" name="price" required)
                                
                                div 
                                    label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="description") Description
                                    textarea#description.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Property description" name="description" required)

                                div 
                                    label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="type") Type
                                    select#type.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="type" required)
                                        option(value="apartment") Apartment
                                        option(value="house") House
                                        option(value="condo") Condo
                                        option(value="land") Land
                                        option(value="commercial") Commercial

                                div.flex.items-center.justify-between.pt-5
                                    a.text-gray-500.text-xs(href="/login" class="hover:text-indigo-600 hover:underline") Already have an account? Log in
                                    a.text-gray-500.text-xs(href="/login/password-recovery" class="hover:text-indigo-600 hover:underline") Forgot my Password

                                input(class="w-full bg-custom2 hover-bg-custom4 text-white font-bold py-3 cursor-pointer" type="submit" value="Insert Property")
