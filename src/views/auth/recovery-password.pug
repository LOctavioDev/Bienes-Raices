extends ../layout/index

block content
  div.py-10
    h1.text-center-4xl.my-10.font-extrabold.text-custom4.text-center.text-5xl Real
      span.font-normal.text-black.text-3.l State
    h2.text-center.text-3.l.font-extrabold.text-4xl Forgot my Password

    .mt-8.mx-auto.max-w-xl
      .bg-custom6.py-8.px-4.shadow-lg.rounded-md 
        form.space-y-5
            div
              label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="email") Email
              input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="user@example.com" type="email" name="email" required)
            
            div.flex.items-center.justify-between
              a.text-gray-500.text-xs(href="/login/register" class="hover:text-indigo-600 hover:underline") Already have an account? 
              a.text-gray-500.text-xs(href="/login" class="hover:text-indigo-600 hover:underline") Log in
            
            input(class="w-full bg-custom2 hover:bg-custom4 text-white font-bold py-3 cursor-pointer" type="submit" value="Send Password Recovery Instructions")
